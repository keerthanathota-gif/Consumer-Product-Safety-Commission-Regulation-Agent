# Graphiti Integration Environment Configuration
# =============================================

# OpenAI Configuration
OPENAI_API_KEY=

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=cpsc_regulations

# Optional: Anthropic API (for alternative LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Other API keys
GROQ_API_KEY=your_groq_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/graphiti_integration.log

# Analysis Configuration
MIN_SIMILARITY_SCORE=0.7
MIN_CONFIDENCE_SCORE=0.8
MAX_RELATIONSHIPS_PER_ENTITY=50

# Visualization Configuration
MAX_NODES_DISPLAY=500
MAX_EDGES_DISPLAY=1000
LAYOUT_ALGORITHM=force_directed